<div class="panel panel-default">
  <div class="panel-body">
  <h1>Your Programs</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Created at</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @programs.each do |program| %>
      <% if program.user_id == current_user.id %>
        <tr>
          <td><%= program.name %></td>
          <td><%= program.created_at.in_time_zone("Eastern Time (US & Canada)").strftime("%A, %D, %r") %> EST </td>
          <td><%= link_to 'View', program %></td>
          <td><%= link_to 'Edit', edit_program_path(program) %></td>
          <td><%= link_to 'Delete', program, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Program', new_program_path, class: "btn btn-primary" %>
</div>
</div>
